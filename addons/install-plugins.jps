{
    "jpsType": "update",
    "name": "WordPress plugins addon",
    "description": "This addon for plugins install",
    "globals": {
        "SERVER_WEBROOT": "/var/www/webroot/ROOT",
    },
    "onInstall": {
        "cmd[${nodes.cp[0].id}]": [
            "wp --allow-root plugin install wp-super-cache --activate --path=/var/www/webroot/ROOT",
            "chown nginx:nginx -R ${globals.SERVER_WEBROOT}/*"
        ]
    }
}

